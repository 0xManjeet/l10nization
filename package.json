{
  "preview": true,
  "name": "l10nization",
  "displayName": "L10nization",
  "version": "0.1.0",
  "publisher": "lsaudon",
  "description": "A tool for extracting text to arb files in a Flutter application.",
  "author": {
    "name": "Lucas SAUDON"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lsaudon/l10nization.git"
  },
  "bugs": {
    "url": "https://github.com/lsaudon/l10nization/issues"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.72.0"
  },
  "keywords": [
    "flutter",
    "dart",
    "l10n",
    "localization",
    "arb"
  ],
  "license": "MIT",
  "activationEvents": [
    "onLanguage:dart"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run check-lint-format",
    "check-lint": "eslint src --ext ts",
    "check-format": "prettier --ignore-path .gitignore --config .prettierrc  \"**/*.+(js|ts|json|md|yaml|.prettierrc)\" --check",
    "check-lint-format": "npm run check-lint && npm run check-format",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier --ignore-path .gitignore --config .prettierrc  \"**/*.+(js|ts|json|md|yaml|.prettierrc)\" --write",
    "lint-format": "npm run lint && npm run format",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "18.11.7",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "yaml": "^2.1.3"
  }
}
